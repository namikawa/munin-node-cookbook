log_level 4
log_file /var/log/munin-node/munin-node.log
pid_file /var/run/munin/munin-node.pid

background 1
setsid 1

user root
group root

# global_timeout 900
# timeout 60

# Regexps for files to ignore
ignore_file [\#~]$
ignore_file DEADJOE$
ignore_file \.bak$
ignore_file %$
ignore_file \.dpkg-(tmp|new|old|dist)$
ignore_file \.rpm(save|new)$
ignore_file \.pod$

#host_name localhost.localdomain

<% node["munin-node"]["allow"].each do |addr| %>
allow <%= addr %>
<% end %>

<% node["munin-node"]["cidr_allow"].each do |cidr| %>
cidr_allow <%= cidr %>
<% end %>

# Which address to bind to;
host *

# And which port
port 4949

